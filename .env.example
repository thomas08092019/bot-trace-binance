# Binance API Configuration
API_KEY=your_api_key_here
SECRET_KEY=your_secret_key_here

# Risk Management Settings
RISK_PERCENT=1.0
LEVERAGE=10

# Trading Parameters
STOPLOSS_PERCENT=2.0

# Take Profit Settings
# Set to 0 to disable hard take profit
TAKEPROFIT_PERCENT=3.0

# Trailing Stop Settings
# TRAILING_ACTIVATION: Price must move this % in profit before trailing activates
# TRAILING_CALLBACK: Distance from highest price to place trailing stop
# Set TRAILING_ACTIVATION to 0 to disable trailing stop
TRAILING_ACTIVATION_PERCENT=1.5
TRAILING_CALLBACK_PERCENT=0.5

TESTNET=true