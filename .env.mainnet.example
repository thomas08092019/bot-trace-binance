# ============================================
# BINANCE FUTURES MAINNET CONFIGURATION
# ============================================
# ⚠️ WARNING: This is REAL MONEY - Use with EXTREME CAUTION
# Get mainnet API keys from: https://www.binance.com/en/my/settings/api-management

# Binance API Configuration
API_KEY=your_mainnet_api_key_here
SECRET_KEY=your_mainnet_secret_key_here

# Environment Mode
TESTNET=false

# ============================================
# RISK MANAGEMENT SETTINGS
# ============================================
# Conservative settings for production
RISK_PERCENT=0.5          # Risk 0.5% of balance per trade (SAFER)
LEVERAGE=5                # 5x leverage (SAFER than 10x)
MARGIN_MODE=isolated      # Margin mode: 'isolated' or 'cross' (ISOLATED highly recommended for safety)
STOPLOSS_PERCENT=1.5      # 1.5% stop loss (TIGHTER)
MAX_POSITION_PERCENT=5.0  # Max 5% of balance as margin per trade (VERY SAFE!)
MAX_CONCURRENT_POSITIONS=3 # Max number of simultaneous positions (conservative)

# Dynamic Risk Management (OPTIONAL - Advanced feature)
ENABLE_DYNAMIC_RISK=false # Start with disabled on mainnet
MIN_LEVERAGE=3            # Minimum leverage when dynamic risk is enabled
MAX_LEVERAGE=10           # Maximum leverage (lower than testnet for safety)
HIGH_VOLATILITY_THRESHOLD=3.0  # ATR% above this = high volatility (reduce leverage)
LOW_VOLATILITY_THRESHOLD=1.0   # ATR% below this = low volatility (can increase leverage)
GOOD_WIN_RATE=65.0        # Win rate% above this = good performance (stricter than testnet)
BAD_WIN_RATE=45.0         # Win rate% below this = poor performance (stricter than testnet)
MAX_DRAWDOWN_PERCENT=15.0 # Stop trading if drawdown exceeds 15% (lower than testnet)
TREND_STRENGTH_THRESHOLD=0.75 # Trend strength above this = can use CROSS mode (stricter)

# ============================================
# TAKE PROFIT & TRAILING STOP
# ============================================
# Take Profit (set to 0 to disable)
TAKEPROFIT_PERCENT=2.5

# Trailing Stop (set TRAILING_ACTIVATION to 0 to disable)
TRAILING_ACTIVATION_PERCENT=1.0  # Activate after 1% profit
TRAILING_CALLBACK_PERCENT=0.3    # Trail 0.3% behind peak (TIGHTER)

# TP Timeout Protection
# If price reaches TP level but order not filled within X seconds, force close with market order
TP_TIMEOUT_SECONDS=30     # Force close after 30 seconds at TP level

# ============================================
# MARKET SCANNER SETTINGS (MAINNET)
# ============================================
# Strict settings for high-quality signals on mainnet
BASE_SYMBOL_LIMIT=20         # Starting number of symbols to scan (higher for mainnet)
MAX_SYMBOL_LIMIT=50          # Maximum symbols to scan (progressive expansion)
MIN_VOLUME_USDT=50000000    # 50M USDT minimum 24h volume (HIGHER)
MIN_PRICE_USDT=1.0          # Minimum token price (stricter for mainnet)
RSI_PERIOD=14               # RSI calculation period
RSI_OVERSOLD=30             # RSI < 30 = oversold (STRICT)
RSI_OVERBOUGHT=70           # RSI > 70 = overbought (STRICT)
EMA_FAST_PERIOD=9           # Fast EMA period
EMA_SLOW_PERIOD=21          # Slow EMA period

# ============================================
# EXCHANGE SETTINGS (MAINNET)
# ============================================
STALE_DATA_THRESHOLD_MS=3000   # 3 seconds (mainnet is faster)
MAX_SPREAD_RATIO=0.0005        # 0.05% max spread (TIGHTER)
MAX_RETRIES=5                  # API retry attempts

# ============================================
# SAFETY LIMITS
# ============================================
QTY_MISMATCH_TOLERANCE=0.00001  # Position/SL quantity tolerance
MIN_NOTIONAL_USDT=10.0          # Minimum order size in USDT (HIGHER)

# ============================================
# SCAN INTERVAL
# ============================================
SCAN_INTERVAL=120  # Seconds between market scans (slower, more deliberate)
