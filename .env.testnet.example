# ============================================
# BINANCE FUTURES TESTNET CONFIGURATION
# ============================================
# Use this configuration for testing on Binance Futures Testnet
# Get testnet API keys from: https://testnet.binancefuture.com

# Binance API Configuration
API_KEY=your_testnet_api_key_here
SECRET_KEY=your_testnet_secret_key_here

# Environment Mode
TESTNET=true

# ============================================
# RISK MANAGEMENT SETTINGS
# ============================================
# Conservative settings for testnet
RISK_PERCENT=1.0          # Risk 1% of balance per trade (loss if SL hit)
LEVERAGE=10               # 10x leverage
MARGIN_MODE=isolated      # Margin mode: 'isolated' or 'cross' (ISOLATED recommended for safety)
STOPLOSS_PERCENT=2.0      # 2% stop loss
MAX_POSITION_PERCENT=10.0 # Max 10% of balance as margin per trade (CRITICAL!)
MAX_CONCURRENT_POSITIONS=5 # Max number of simultaneous positions

# Dynamic Risk Management (OPTIONAL - Advanced feature)
ENABLE_DYNAMIC_RISK=false # Enable dynamic leverage/margin adjustment based on performance
MIN_LEVERAGE=3            # Minimum leverage when dynamic risk is enabled
MAX_LEVERAGE=20           # Maximum leverage when dynamic risk is enabled
HIGH_VOLATILITY_THRESHOLD=3.0  # ATR% above this = high volatility (reduce leverage)
LOW_VOLATILITY_THRESHOLD=1.0   # ATR% below this = low volatility (can increase leverage)
GOOD_WIN_RATE=60.0        # Win rate% above this = good performance (can increase leverage)
BAD_WIN_RATE=40.0         # Win rate% below this = poor performance (reduce leverage)
MAX_DRAWDOWN_PERCENT=20.0 # Stop trading if drawdown exceeds this %
TREND_STRENGTH_THRESHOLD=0.7 # Trend strength above this = can use CROSS mode

# ============================================
# TAKE PROFIT & TRAILING STOP
# ============================================
# Take Profit (set to 0 to disable)
TAKEPROFIT_PERCENT=3.0

# Trailing Stop (set TRAILING_ACTIVATION to 0 to disable)
TRAILING_ACTIVATION_PERCENT=1.5  # Activate after 1.5% profit
TRAILING_CALLBACK_PERCENT=0.5    # Trail 0.5% behind peak

# TP Timeout Protection
# If price reaches TP level but order not filled within X seconds, force close with market order
TP_TIMEOUT_SECONDS=30     # Force close after 30 seconds at TP level

# ============================================
# MARKET SCANNER SETTINGS (TESTNET)
# ============================================
# Relaxed settings for easier signal generation on testnet
BASE_SYMBOL_LIMIT=15         # Starting number of symbols to scan
MAX_SYMBOL_LIMIT=50          # Maximum symbols to scan (progressive expansion)
MIN_VOLUME_USDT=10000000    # 10M USDT minimum 24h volume
MIN_PRICE_USDT=0.0001       # Minimum token price (allow meme coins like SHIB, PEPE, FLOKI)
RSI_PERIOD=14               # RSI calculation period
RSI_OVERSOLD=45             # RSI < 45 = oversold (relaxed for testnet)
RSI_OVERBOUGHT=55           # RSI > 55 = overbought (relaxed for testnet)
EMA_FAST_PERIOD=9           # Fast EMA period
EMA_SLOW_PERIOD=21          # Slow EMA period

# ============================================
# EXCHANGE SETTINGS (TESTNET)
# ============================================
STALE_DATA_THRESHOLD_MS=10000  # 10 seconds (testnet has higher latency)
MAX_SPREAD_RATIO=0.001         # 0.1% max spread
MAX_RETRIES=5                  # API retry attempts

# ============================================
# CALCULATOR SETTINGS
# ============================================
MIN_NOTIONAL_USDT=6.0          # Minimum order size in USDT

# ============================================
# SAFETY SETTINGS
# ============================================
QTY_MISMATCH_TOLERANCE=0.00001 # Quantity comparison tolerance

# ============================================
# SCAN INTERVAL
# ============================================
SCAN_INTERVAL=60  # Seconds between market scans (faster for testnet)
# SAFETY LIMITS
# ============================================
QTY_MISMATCH_TOLERANCE=0.00001  # Position/SL quantity tolerance
MIN_NOTIONAL_USDT=6.0           # Minimum order size in USDT

# ============================================
# SCAN INTERVAL
# ============================================
SCAN_INTERVAL=60  # Seconds between market scans
